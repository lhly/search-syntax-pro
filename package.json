{
  "name": "ssp-smart-search-plugin",
  "version": "1.6.2",
  "description": "搜索语法可视化工具 - SearchSyntax Pro",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/post-build.js",
    "package": "npm run build && node scripts/package.js",
    "package:only": "node scripts/package.js",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "check-version": "node scripts/check-version.js",
    "resize:screenshots": "node scripts/resize-screenshots.js screenshot ./screenshots ./store-assets",
    "resize:logo": "node scripts/resize-screenshots.js logo ./screenshots ./store-assets",
    "resize:promo-small": "node scripts/resize-screenshots.js small-promo ./screenshots ./store-assets",
    "resize:promo-large": "node scripts/resize-screenshots.js large-promo ./screenshots ./store-assets",
    "resize:all": "npm run resize:screenshots && npm run resize:logo && npm run resize:promo-small && npm run resize:promo-large"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.9",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/chrome": "^0.0.258",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "author": "冷火凉烟 <lhlyzh@qq.com>",
  "homepage": "https://github.com/lhly/search-syntax-pro",
  "repository": {
    "type": "git",
    "url": "https://github.com/lhly/search-syntax-pro.git"
  },
  "bugs": {
    "url": "https://github.com/lhly/search-syntax-pro/issues"
  }
}
